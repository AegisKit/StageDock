{
  "name": "stagedock",
  "version": "1.0.11",
  "description": "StageDock - Electron + Next.js multi-stream viewer for Windows",
  "main": "dist/main/main/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently -n react,tsc,preload,electron -c \"cyan,yellow,green,magenta\" \"npm run dev:renderer\" \"npm run watch:main\" \"npm run watch:preload\" \"npm run start:electron\"",
    "dev:renderer": "cd renderer && npm install && npm run dev",
    "watch:main": "tsc --build --watch tsconfig.main.json tsconfig.preload.json",
    "start:electron": "wait-on tcp:3000 dist/main/main/index.js && npm run ensure:preload && cross-env ELECTRON_RENDERER_URL=http://localhost:3000 electron .",
    "build": "npm run build:renderer && npm run build:main && npx electron-builder",
    "build:renderer": "node scripts/prepare-react-renderer.mjs clean && cd renderer && npm install && npm run build && cd .. && node scripts/prepare-react-renderer.mjs copy",
    "build:main": "tsc --build tsconfig.main.json tsconfig.preload.json && npm run ensure:preload",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=0",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "rebuild:native": "npx electron-builder install-app-deps",
    "watch:preload": "node scripts/ensure-preload.cjs --watch",
    "ensure:preload": "node scripts/ensure-preload.cjs"
  },
  "keywords": [
    "electron",
    "nextjs",
    "typescript",
    "multi-stream",
    "windows"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": "22.x"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@mantine/hooks": "^7.10.3",
    "@radix-ui/react-slider": "^1.0.4",
    "@tanstack/react-query": "^5.37.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^22.5.1",
    "better-sqlite3": "^9.5.0",
    "cheerio": "^1.1.2",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.4.7",
    "get-port-please": "^3.2.0",
    "i18next": "^23.11.2",
    "keytar": "^7.9.0",
    "pino": "^8.18.0",
    "pino-pretty": "^11.2.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reflect-metadata": "^0.2.2",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "undici": "^6.19.8",
    "ws": "^8.17.1",
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@tailwindcss/forms": "^0.5.7",
    "@types/better-sqlite3": "^7.6.9",
    "@types/react": "19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "autoprefixer": "^10.4.17",
    "electron": "^30.0.6",
    "eslint": "^8.57.0",
    "postcss": "^8.4.30",
    "tailwindcss": "^3.4.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "wait-on": "^7.1.0"
  },
  "postinstall": "npx electron-builder install-app-deps"
}
