{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist/preload",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@preload/*": ["src/preload/*"],
      "@common/*": ["src/common/*"]
    },
    "module": "CommonJS",
    "moduleResolution": "Node",
    "composite": true,
    "declaration": true,
    "declarationDir": "dist/preload/types",
    "sourceMap": true,
    "tsBuildInfoFile": "dist/preload/tsconfig.tsbuildinfo"
  },
  "include": ["src/preload/**/*.ts", "src/preload/**/*.tsx", "src/common/**/*.ts", "src/common/**/*.tsx"]
}
